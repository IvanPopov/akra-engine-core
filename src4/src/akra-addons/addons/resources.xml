<?xml version="1.0" encoding="utf-8"?>
<Resources>
  <Project Name="addon-navigation">
    <Resource Name="AE_NAVIGATION_DEPENDENCIES">
      <Filename>navigation.addon</Filename>
      
      <PropertyGroup Condition="$('Configuration') == 'Debug'">
        <Archive>True</Archive>
        <UseInlining>False</UseInlining>
        <Data>
          <Folder Path="navigation">
            <Exclude Path="cubemap.psd" />
          </Folder>
          <Resource Path="navigation/cube.dae"
                    Name="akra.navigation.ORIENTATION_CUBE"
                    Comment="Model of orientation cube."/>
        </Data>
      </PropertyGroup>

      <PropertyGroup Condition="$('Configuration') == 'Release'">
        <Archive>True</Archive>
        <UseInlining>True</UseInlining>
        <Data>
          <Folder Path="navigation">
            <Exclude Path="cubemap.psd" />
          </Folder>
          <Resource Path="navigation/cube.dae"
                    Name="akra.navigation.ORIENTATION_CUBE" />
        </Data>
      </PropertyGroup>
    </Resource>
  </Project>
  <Project Name="addon-progress">
    <Resource Name="AE_PROGRESS_DEPENDENCIES">
      <PropertyGroup>
        <Data>
          <Folder Path="progress/css"/>
        </Data>
      </PropertyGroup>
    </Resource>
  </Project>
</Resources>
