<?xml version="1.0" encoding="utf-8"?>
<AkraResources>
  <Project Name="core">
    <!-- AE_DEBUG/AE_VERSION used in config/config.ts -->
    <Variable Name="AE_DEBUG">$('Configuration') == 'Debug'</Variable>
    <Variable Name="AE_VERSION">$('Version').full</Variable>

    <!-- AE_THREAD_* used in config/config.ts -->
    <Attachment Name="AE_THREAD_FILEINTERFACE">
      <File Path="io/FileInterface.t.js" />
      <!--<Format>String</Format>-->
    </Attachment>

    <Attachment Name="AE_THREAD_REMOTEFILE">
      <File Path="io/RemoteFile.t.js" />
      <!--<Format>String</Format>-->
    </Attachment>

    <Attachment Name="AE_THREAD_LOCALFILE">
      <File Path="io/LocalFile.t.js" />
      <!--<Format>String</Format>-->
    </Attachment>

    <Attachment Name="AE_THREAD_TESSELATION">
      <File Path="terrain/TessellationThread.t.js" />
      <Format>String</Format>
    </Attachment>

    <!-- AE_ZIP_READER used in akra.ts -->
    <Attachment Name="AE_ZIP_READER">
      <PropertyGroup Condition="$('Zip')">
        <File Path="resources/js/zip.js/zip.js" />
        <File Path="resources/js/zip.js/zip-ext.js" />
        <File Path="resources/js/zip.js/mime-types.js" />
        <File Path="resources/js/zip.js/inflate.js" />
        <Format>Text</Format>
        <!--<Minify>YUI</Minify>-->
      </PropertyGroup>
    </Attachment>

    <!-- AE_CORE_DEPENDENCIES used in config/config.ts -->
    <Resource Name="AE_CORE_DEPENDENCIES">
      <Filename>akra</Filename>

      <PropertyGroup  Condition="$('Configuration') == 'Debug'">
        <Archive>False</Archive>
        <UseInlining>False</UseInlining>
        <Data>
          <File Path="resources/fx/floatSpecialFunctions.afx" />
          <Resource Path="resources/HLSL.gr">
            <Resource Path="resources/fx/SystemEffects.afx" />
            <Resource Path="resources/fx/Plane.afx" />
            <Resource Path="resources/fx/fxaa.afx" />
            <Resource Path="resources/fx/skybox.afx" />
            <Resource Path="resources/fx/TextureToScreen.afx" />
            <Resource Path="resources/fx/mesh_geometry.afx" >
              <Resource Path="resources/fx/mesh_texture.afx" />
            </Resource>
            <Resource Path="resources/fx/prepare_shadows.afx" />
            <Resource Path="resources/fx/terrain.afx" />
            <Resource Path="resources/fx/prepareDeferredShading.afx">
              <Resource Path="resources/fx/apply_lights_and_shadows.afx" />
              <Resource Path="resources/fx/deferredShading.afx" >
                <Resource Path="resources/fx/color_maps.afx" />
              </Resource>
            </Resource>
            <Resource Path="resources/fx/generate_normal_map.afx" />
            <Resource Path="resources/fx/sky.afx" />
            <Resource Path="resources/fx/motion_blur.afx" />
            <Resource Path="resources/fx/edge_detection.afx" />
            <Resource Path="resources/fx/wireframe.afx" />
            <Resource Path="resources/fx/sprite.afx" />
          </Resource>
        </Data>
      </PropertyGroup>

      <PropertyGroup  Condition="$('Configuration') == 'Release'">
        <Archive>True</Archive>
        <UseInlining>True</UseInlining>
        <Data>
          <File Path="resources/fx/floatSpecialFunctions.afx" />
          <Resource Path="resources/HLSL.gr">
            <Resource Path="resources/fx/SystemEffects.afx" />
            <Resource Path="resources/fx/Plane.afx" />
            <Resource Path="resources/fx/fxaa.afx" />
            <Resource Path="resources/fx/skybox.afx" />
            <Resource Path="resources/fx/TextureToScreen.afx" />
            <Resource Path="resources/fx/mesh_geometry.afx" >
              <Resource Path="resources/fx/mesh_texture.afx" />
            </Resource>
            <Resource Path="resources/fx/prepare_shadows.afx" />
            <Resource Path="resources/fx/terrain.afx" />
            <Resource Path="resources/fx/prepareDeferredShading.afx">
              <Resource Path="resources/fx/apply_lights_and_shadows.afx" />
              <Resource Path="resources/fx/deferredShading.afx" >
                <Resource Path="resources/fx/color_maps.afx" />
              </Resource>
            </Resource>
            <Resource Path="resources/fx/generate_normal_map.afx" />
            <Resource Path="resources/fx/sky.afx" />
            <Resource Path="resources/fx/motion_blur.afx" />
            <Resource Path="resources/fx/edge_detection.afx" />
            <Resource Path="resources/fx/wireframe.afx" />
            <Resource Path="resources/fx/sprite.afx" />
          </Resource>
        </Data>
      </PropertyGroup>
    </Resource>
  </Project>
</AkraResources>
