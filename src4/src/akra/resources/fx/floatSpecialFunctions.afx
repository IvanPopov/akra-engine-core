const float unit = 255.0/256.0;
float float3ToFloat( float3 data ) {
  float compressed = fract( data.x * unit ) + floor( data.y * unit * 255.0 ) + floor( data.z * unit * 255.0 ) * 255.0;
  return compressed;
}