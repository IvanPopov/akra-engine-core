float4 floatToFloat4(float value){
  float data = value;
  float4 result = float4(0.);

  if(data == 0.){
    float signedZeroTest = 1./value;
    if(signedZeroTest < 0.){
      result.x = 128.;
    }
    return result/255.;
  }

  if(data < 0.){
    result.x=128.;
    data = -data;
  }

  float power = 0.;
  bool isFinish = false;

  for(int i = 0; i < 128; i++) {
    if(isFinish){
      break;
    }

    if(data >= 2.) {
      if(!isFinish){
        data = data * 0.5;
        power += 1.;
        if (power == 127.) {
          isFinish = true;
        }
      }
    }
    else if(data < 1.) {
      if(!isFinish){
        data = data * 2.;
        power -= 1.;
        if (power == -126.) {
          isFinish = true;
        }
      }
    }
    else {
      isFinish = true;
    }
  }

  if(power == -126. && data < 1.){
    power = 0.;
  }
  else{
    power = power + 127.;
    data = data - 1.;
  }

  result.x+=floor(power/2.);
  result.y = mod(power,2.)*128.;

  data *= 128.;

  result.y += floor(data);

  data -= floor(data);
  data *= 256.;

  result.z = floor(data);

  data -= floor(data);
  data *= 256.;

  result.w = floor(data);

  return result/255.;
}
