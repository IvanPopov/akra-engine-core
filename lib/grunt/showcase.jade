							a.b-footer-sub-menu-item-link(href=(URL + "/licensing"))= "Licensing"
						li.item-120.b-footer-sub-menu-item
							a.b-footer-sub-menu-item-link(href=(URL + "/vacancies"))= "Vacancies"
						li.item-121.b-footer-sub-menu-item
							a.b-footer-sub-menu-item-link(href=(URL + "/news"))= "News"
				li.b-footer-menu-item
					ul.b-footer-sub-menu
						li.item-122.b-footer-sub-menu-item
							a.b-footer-sub-menu-item-link(href=(URL + "/demo"))= "Demo"
						li.item-123.b-footer-sub-menu-item
							a.b-footer-sub-menu-item-link(href=(URL + "/team"))= "Team"
						li.item-124.b-footer-sub-menu-item
							a.b-footer-sub-menu-item-link(href=(URL + "/contacts"))= "Contacts"
			div.b-footer-copy