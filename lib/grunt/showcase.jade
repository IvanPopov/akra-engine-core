				div.clr
				div.item-page
					h1.b-title= "Showcase"
					div.b-article-text
						div.b-showcase
							div.b-showcase-text
								ul.b-showcase-list
									- for (var x = 0; x < index.length; )
										- for (var r = 0; r < 3 && x < index.length; r++, x++)
											li.b-showcase-list-item(class=((x + 1) % 3? "": "last"))
