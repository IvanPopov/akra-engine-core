- var URL = "http://odserve.org"

doctype html
html(lang="en")
	head
		title= "Showcase"
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		link(href="img/favicon.ico", rel="shortcut icon", type="image/vnd.microsoft.icon")
		link(rel="stylesheet", href="css/bootstrap.min.css", type="text/css")
		link(rel="stylesheet", href="css/showcase.css", type="text/css")
		link(rel="stylesheet", href="css/fonts.css", type="text/css")
body
	div.b-page
		div.b-top-shadow
			div.b-top-wrap
				div.b-top
					a.b-logo(href=(URL + "/"))
					ul.b-top-menu
						li.item-101.b-top-menu-item
							a.b-top-menu-item-link(href=(URL + "/news"))= "News"
						li.item-102.b-top-menu-item
							a.b-top-menu-item-link(href=(URL + "/technology"))= "Technology"
						li.item-103.b-top-menu-item
							a.b-top-menu-item-link(href=(URL + "/licensing"))= "Licensing"
						li.item-104.b-top-menu-item
							a.b-top-menu-item-link(href=(URL + "/showcase"))= "Showcase"
						li.item-105.b-top-menu-item
							a.b-top-menu-item-link(href=(URL + "/partners"))= "Partners"
						li.item-106.b-top-menu-item
							a.b-top-menu-item-link(href=(URL + "/contacts"))= "Contacts"
		div.b-center
			div.b-content
				ul.b-3bonners
					li.b-3bonners-item
					li.b-3bonners-item
					li.b-3bonners-item.last
				div.clr
				div.item-page
					h1.b-title= "Showcase"
					div.b-article-text
						div.b-showcase
							div(style="background-color: rgba(0, 0, 0, 0.5); position: absolute; width: 500px; height: 200px; margin-top: -330px; padding: 10px;")
								table(style="width: 480px; border: none; padding: 0; font-family: consolas; ")
									tr
										td(style="padding: 0; border: 0; border-bottom: 1px dotted gray; text-align: left;")
											span(style="margin-bottom: -2px;")= "Build"
										td(style="padding: 0; border: 0; border-bottom: 1px dotted gray; text-align: right;")
											span(style="margin-bottom: -2px;")
												a(href=(URL + "/akra/downloads/snapshots/" + version.full), style="text-decoration: none;")= version.full
									tr
										td(style="padding: 0; border: 0; border-bottom: 1px dotted gray; text-align: left;")
											span(style="margin-bottom: -2px;")= "Updated"
										td(style="padding: 0; border: 0; border-bottom: 1px dotted gray; text-align: right;")
											span(style="margin-bottom: -2px;")= ((new Date(timestamp)).toLocaleDateString() + " " + (new Date(timestamp)).toLocaleTimeString())
							div.b-showcase-text
								ul.b-showcase-list
									- for (var x = 0; x < index.length; )
										- for (var r = 0; r < 3 && x < index.length; r++, x++)
											li.b-showcase-list-item(class=((x + 1) % 3? "": "last"))
												a.b-showcase-list-item-image(href=index[x].link, target="_blank")
													- if (index[x].youtube !== null && index[x].preview === null)
														iframe(style="width: 100%; height: 100%;", src=index[x].youtube, frameborder="0", allowfullscreen, showsearch="0", showinfo="0")
													- else
														img(src=index[x].preview, alt=index[x].name)
												a.b-showcase-list-item-title(href=index[x].link, target="_blank")= index[x].name
												p.b-showcase-list-item-description= index[x].description
												a.b-showcase-list-item-readmore.btn.btn-default(href=index[x].link, target="_blank", role="button")= "Launch"
												- if (index[x].youtube) 
														a.btn.btn-default.b-showcase-list-item-youtube(href=index[x].youtube) 
															img(src="img/showcase/YouTube-logo-light.png")
												- if (index[x].byteLength !== 0)
													div(style="position: absolute; font-size: 10px; color: black;margin-top: -15px; margin-left: 200px;")= ((index[x].byteLength / (1024 * 1024)).toFixed(2) + " mb")
												//- span.label.label-default= "Default"
										div.b-showcase-list.b-showcase-list-light
										
								div.clr
								div.b-showcase-text
									p.
										Supported browsers: chrome, yandex browser, firefox, opera, android browser
	div.b-footer-wrap
		div.b-footer
