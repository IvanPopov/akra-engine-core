													img(src="./img/default-thumb-300x200.png", alt="...")
												a.b-showcase-list-item-title(style="margin-left: 3px; margin-bottom: 1px; font-size: 23px; font-family: 'Segoe UI Light', 'Segoe UI', 'Segoe WP', 'Helvetica Neue', sans-serif;")= index[x].name
												p.b-showcase-list-item-description(style="margin-left: 3px; font-size: 16px; color: white; font-family: 'Segoe UI Light', 'Segoe UI', 'Segoe WP', 'Helvetica Neue', sans-serif;")= index[x].description
												a.b-showcase-list-item-readmore.btn.btn-default(href=index[x].link, role="button", style="margin-left: 3px; margin-top: 10px; font-size: 17px; background-color: #333; color: white; border: none; font-weight: bold; width: 80px; border-radius: 0px; font-family: 'Segoe UI Light', 'Segoe UI', 'Segoe WP', 'Helvetica Neue', sans-serif;")= "Launch"
												//- span.label.label-default= "Default"
										div.b-showcase-list(style="margin-top: 15px; margin-bottom: 15px; opacity: .5;")
										
								div.clr
